<!-- sign in card -->
<div class="container">
  <div class=id="login">
    <div class="row justify-space-between-md">
      <div class="login-card form-box" >
        <h2 class="page-title" id="title">Login</h2>
        <form class="form login-form">
          <!-- Email input -->
          <div class="form-group input-field">
            <i class="fa-solid fa-envelope"></i>
            <label for="email-login">Email:</label>
            <input class="form-input" type="text" type="email" id="email-login" />
          </div>
          <!-- Password input -->
          <div class="form-group input-field">
            <i class="fa-solid fa-lock"></i>
            <label for="password-login">Password:</label>
            <input class="form-input" type="password" id="password-login" />
          </div>
          <!-- Login Btn -->
          <div class="form-group btn-field">
            <button class="btn btn-primary" id="signinBtn" type="submit"
            {{!-- ⛔️ **rb** I'm removing this onclick, can update form handler redirect if we want it to go to profile page after login **rb** --}}
              {{!-- onclick="window.location.href = 'profile-page.handlebars'" --}}
              >login</button>
          </div>
        </form>
      </div>
    </div>

    <!-- Sign Up card -->
    <div class="login-card">
      <h2 class="page-title">Signup</h2>
      <form class="form signup-form">
        <div class="form-group ">
          <label for="username-signup" class="input-field">Username:</label>
          <input class="form-input" type="text" id="username-signup" />
        </div>
        <!-- Email input -->
        <div class="form-group input-field">
          <label for="email-signup" class="input-field">Email:</label>
          <input class="form-input" type="text" id="email-signup" />
        </div>
        <!-- Password input -->
        <div class="form-group">
          <label for="password-signup" class="input-field">Password:</label>
          <input class="form-input" type="password" id="password-signup" />
        </div>
        <!-- Sign Up Btn -->
        <div class="form-group">
          <button class="btn btn-primary btn-field button" id="signupBtn" type="submit">signup</button>
        </div>
      </form>
    </div>
  </div>

  <script src="/js/login.js"></script>