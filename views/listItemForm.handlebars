<h2>Add an item</h2>
<!-- item name input -->
<form class="form submit-form">
    <div class="form-group">
        <label for="item-name">Item name:</label>
        <input class="form-input" type="text" id="item-name" />
    </div>
    <!-- item description input -->
    <div class="form-group">
        <label for="description">Description:</label>
        <input class="form-input" type="text" id="description" />
    </div>
    <!-- item price input, decimal -->
    <div class="form-group">
        <label for="list-price">Price:</label>
        <input class="form-input" type="number" step="0.01" id="list-price" />
    </div>

    <!-- photo upload: disabled for now, can remove "disabled" state when we're ready -->
    <div class="form-group">
        <label for="photo-upload">Upload a photo</label>
        <input type="file" class="form-control-file" id="exampleFormControlFile1" disabled>
    </div>

    <!-- tag checkboxes -->
    <!-- use partial for tags & generate dynamically from tags in db? -->
    <div class="form-group">
        <label for="tags">Tags:</label>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="tags">
            <label class="form-check-label" for="beading">beading</label>
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="tags">
            <label class="form-check-label" for="knit-crochet">knitting and crochet</label>
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="tags">
            <label class="form-check-label" for="sewing">sewing</label>
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="tags">
            <label class="form-check-label" for="weaving">weaving</label>
            <!-- for future development? allow user to input additional tags and save to db -->
        </div>
    </div>

    <!-- submit button -->
    <div class="form-group">
        <button class="btn btn-primary" type="submit">submit</button>
    </div>
</form>

<script src="/js/listItem.js"></script>