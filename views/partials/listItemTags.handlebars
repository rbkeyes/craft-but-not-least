<!-- loop through each tag in tags -->
{{#each tags as |tag|}}

    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="{{tag.name}}">
        <label class="form-check-label" for="{{tag.name}}">{{tag.name}}</label>
    </div>

{{/each}}
        
{{!-- for future development: allow user to input additional tags and save to db --}}
{{!-- any added tags will be dynamically generated to the form --}}
